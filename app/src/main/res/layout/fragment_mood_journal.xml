<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mood_journal"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_onBackground"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/track_your_daily_emotions"
                android:textSize="16sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Add Mood Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/how_are_you_feeling_today"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/md_theme_light_onBackground" />

                    <!-- Emoji Selector Grid -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:columnCount="5"
                        android:rowCount="1"
                        android:alignmentMode="alignMargins"
                        android:useDefaultMargins="false">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/emoji_card_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@android:color/transparent">

                            <TextView
                                android:id="@+id/emoji_1"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="@string/happyEmoji"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="?attr/selectableItemBackground" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/emoji_card_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@android:color/transparent">

                            <TextView
                                android:id="@+id/emoji_2"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="@string/fearEmoji"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="?attr/selectableItemBackground" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/emoji_card_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@android:color/transparent">

                            <TextView
                                android:id="@+id/emoji_3"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="@string/sadEmoji"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="?attr/selectableItemBackground" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/emoji_card_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@android:color/transparent">

                            <TextView
                                android:id="@+id/emoji_4"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="@string/angerEmoji"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="?attr/selectableItemBackground" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/emoji_card_5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@android:color/transparent">

                            <TextView
                                android:id="@+id/emoji_5"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:text="@string/sleepyEmoji"
                                android:textSize="32sp"
                                android:gravity="center"
                                android:background="?attr/selectableItemBackground" />

                        </com.google.android.material.card.MaterialCardView>

                    </GridLayout>

                    <!-- Note Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="@string/add_a_note_optional"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="@color/md_theme_light_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/note_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minLines="3"
                            android:gravity="top|start"
                            android:inputType="textMultiLine|textCapSentences" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Save Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/save_mood_button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/save_mood"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="28dp"
                        app:backgroundTint="@color/md_theme_light_primary"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Mood History Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mood_history"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onBackground"
                    android:layout_marginBottom="12dp" />

                <!-- Mood Chart -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@android:color/white">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/mood_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp" />

                </com.google.android.material.card.MaterialCardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mood_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false"
                    android:paddingBottom="80dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
