<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    android:backgroundTint="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Emoji Background Circle -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/emoji_container"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F0F8FF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/mood_emoji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/happyEmoji1"
                android:textSize="36sp"
                android:gravity="center" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Content Layout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/emoji_container"
            app:layout_constraintBottom_toBottomOf="@id/emoji_container"
            app:layout_constraintStart_toEndOf="@id/emoji_container"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/mood_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today_2_30_pm"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_onBackground" />

            <TextView
                android:id="@+id/mood_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feeling_great_after_morning_workout"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
